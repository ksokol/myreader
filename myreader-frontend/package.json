{
  "name": "myreader-frontend",
  "description": "Myreader frontend package",
  "scripts": {
    "build": "export NODE_ENV=production && webpack --bail --progress --profile --display-optimization-bailout",
    "server": "export NODE_ENV=development && webpack-dev-server --history-api-fallback --inline --progress",
    "test": "export NODE_ENV=test && jest --coverage --ci --silent",
    "test-watch": "export NODE_ENV=test && jest --watch --verbose false",
    "start": "npm run server",
    "report": "export NODE_ENV=production && webpack --bail --progress --profile && webpack-bundle-analyzer dist/stats.json",
    "lint": "npm run lint:js-report",
    "lint:js-report": "eslint -f json -o build/reports/eslint.json -c .eslintrc.js src/app/js",
    "lint:js": "eslint -c .eslintrc.js src/app/js"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.9.0",
    "@jaames/iro": "4.5.1",
    "classnames": "2.2.6",
    "dialog-polyfill": "0.5.0",
    "lodash.debounce": "4.0.8",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-redux": "7.0.3",
    "react-router": "5.0.1",
    "react-router-dom": "5.0.1",
    "redux": "4.0.1",
    "redux-thunk": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-react": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "2.1.1",
    "cssnano": "4.1.10",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-unicorn": "9.0.0",
    "file-loader": "4.0.0",
    "html-webpack-plugin": "3.2.0",
    "intersection-observer": "0.7.0",
    "jest": "24.8.0",
    "jest-sonar-reporter": "2.0.0",
    "lodash.ismatch": "4.4.0",
    "mini-css-extract-plugin": "0.7.0",
    "mock-local-storage": "1.1.8",
    "null-loader": "3.0.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "raw-loader": "3.0.0",
    "redux-mock-store": "1.5.3",
    "relative-time-format": "0.2.2",
    "svg-url-loader": "2.3.2",
    "sw-precache-webpack-plugin": "0.11.5",
    "terser-webpack-plugin": "1.3.0",
    "webpack": "4.33.0",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.3",
    "webpack-dev-server": "3.7.1",
    "webpack-pwa-manifest": "4.0.0"
  },
  "directories": {
    "test": "test"
  },
  "jestSonar": {
    "reportPath": "build",
    "reportFile": "TESTS.xml"
  }
}

{
  "name": "myreader-frontend",
  "description": "Myreader frontend package",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "build": "export NODE_ENV=production && webpack --bail --progress --profile --display-optimization-bailout",
    "server": "export NODE_ENV=development && webpack-dev-server --history-api-fallback --inline --progress",
    "test": "export NODE_ENV=test && jest --coverage --ci --silent",
    "test-watch": "export NODE_ENV=test && jest --watch --verbose false",
    "start": "npm run server",
    "report": "export NODE_ENV=production && webpack --bail --progress --profile && webpack-bundle-analyzer dist/stats.json",
    "lint": "npm run lint:js-report && npm run lint:lockfile",
    "lint:js-report": "eslint -f json -o build/reports/eslint.json src/app/js",
    "lint:js": "eslint src/app/js",
    "lint:lockfile": "npx lockfile-lint -p package-lock.json -s -a npm -t npm",
    "audit:high": "npm audit --audit-level=high"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.12.1",
    "@jaames/iro": "5.1.5",
    "classnames": "2.2.6",
    "dialog-polyfill": "0.5.0",
    "lodash.debounce": "4.0.8",
    "prop-types": "15.7.2",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.8.7",
    "@babel/preset-react": "7.8.3",
    "babel-eslint": "10.1.0",
    "babel-jest": "25.1.0",
    "babel-loader": "8.1.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.5.3",
    "cssnano": "4.1.10",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "eslint-plugin-unicorn": "17.2.0",
    "file-loader": "6.0.0",
    "html-webpack-plugin": "4.3.0",
    "jest": "25.1.0",
    "jest-sonar-reporter": "2.0.0",
    "lockfile-lint": "4.1.0",
    "lodash.ismatch": "4.4.0",
    "mini-css-extract-plugin": "0.9.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "raw-loader": "4.0.1",
    "svg-url-loader": "6.0.0",
    "sw-precache-webpack-plugin": "1.0.0",
    "terser-webpack-plugin": "3.0.3",
    "webpack": "4.43.0",
    "webpack-bundle-analyzer": "3.8.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-pwa-manifest": "4.2.0"
  },
  "resolutions": {
    "minimist": "1.2.5"
  },
  "directories": {
    "test": "test"
  },
  "jestSonar": {
    "reportPath": "build",
    "reportFile": "TESTS.xml"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "es6": true,
      "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:unicorn/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "settings": {
      "react": {
        "version": "16"
      }
    },
    "plugins": [
      "jest",
      "react-hooks"
    ],
    "rules": {
      "indent": [
        "warn",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-undef": "warn",
      "no-unused-vars": "warn",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "warn",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "react/display-name": "warn",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/catch-error-name": "warn",
      "unicorn/filename-case": "off",
      "unicorn/prefer-query-selector": "error",
      "unicorn/import-index": "error",
      "unicorn/prefer-includes": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error"
    }
  }
}

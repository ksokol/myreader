{
  "name": "myreader-frontend",
  "description": "Myreader frontend package",
  "scripts": {
    "build": "export NODE_ENV=production && webpack --bail --progress --profile",
    "test": "export NODE_ENV=test && jest --coverage --ci --silent",
    "start": "export NODE_ENV=development && webpack serve --history-api-fallback --progress",
    "report": "export NODE_ENV=production && webpack --bail --progress --profile && webpack-bundle-analyzer dist/stats.json",
    "lint": "npm run lint:js-report && npm run lint:lockfile",
    "lint:js-report": "eslint -f json -o build/reports/eslint.json src/app/js",
    "lint:js": "eslint src/app/js",
    "lint:lockfile": "npx lockfile-lint -p package-lock.json -s -a npm -t npm",
    "audit:high": "npm audit --audit-level=high"
  },
  "dependencies": {
    "prop-types": "15.8.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hotkeys-hook": "3.4.6",
    "react-intersection-observer": "9.2.2"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/eslint-parser": "7.18.2",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-react": "7.16.5",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.2",
    "babel-jest": "28.1.1",
    "babel-loader": "8.2.5",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.1",
    "css-minimizer-webpack-plugin": "4.0.0",
    "eslint": "8.17.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jest-dom": "4.0.2",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-testing-library": "5.5.1",
    "html-webpack-plugin": "5.5.0",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lockfile-lint": "4.7.4",
    "lodash.isequal": "4.5.0",
    "mini-css-extract-plugin": "2.6.0",
    "raw-loader": "4.0.2",
    "webpack": "5.73.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.2"
  },
  "directories": {
    "test": "test"
  }
}
